<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="ChibiOS/RT"
            id="org.chibios.tools.eclipse.debug">
      </category>
      <view
            name="ChibiOS/RT Threads View"
            icon="icons/sample.gif"
            category="org.chibios.tools.eclipse.debug"
            class="org.chibios.tools.eclipse.debug.views.ThreadsView"
            id="org.chibios.tools.eclipse.debug.views.ThreadsView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="org.chibios.tools.eclipse.debug.views.ThreadsView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
