<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
<!-- All SPC5 Component extension shall have the namespace "com.st.tools.spc5"-->
   <extension
         id="org.chibios.spc5.components.chibios.license"
         name="ChibiOS Product License Component"
         point="com.st.tools.spc5.extension.v1">
      <component
            hidden="true"
            icon="rsc/chibios.ico"
            isPlatform="false">
            <description>
                ChibiOS product license component.
            </description>
            <categories>
               <category
                     id="ChibiOS/Portable Components">
               </category>
            </categories>
            <configuration>
               <description>
                  ChibiOS product license component. This component exports the header files with license details for all other ChibiOS components.
               </description>
               <image
                     align="left"
                     file="rsc/chibios48x48.png">
                  <text>
                     Copyright (C) Giovanni Di Sirio. All rights reserved.
                  </text>
               </image>
           </configuration>
            <exportedFeatures>
               <exportedFeature
                     brief="ChibiOS product license interface."
                     exclusive="false"
                     id="org.chibios.spc5.features.chibios.license">
               </exportedFeature>
            </exportedFeatures>
      </component>
   </extension>

</plugin>
