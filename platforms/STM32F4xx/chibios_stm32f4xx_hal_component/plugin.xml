<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
<!-- All SPC5 Component extension shall have the namespace "com.st.tools.spc5"-->
   <extension
         id="org.chibios.spc5.components.stm32f4xx.hal"
         name="ChibiOS-HAL for STM32F4xx Component"
         point="com.st.tools.spc5.extension.v1">
      <component
            headerName="hal.h"
            hidden="true"
            icon="rsc/chibios.ico"
            initFunction="halInit"
            isPlatform="false">
            <description>
                ChibiOS/HAL for STM32F4xx. This component takes care of the MCU initialization and is the base for all drivers.
            </description>
            <categories>
               <category
                     id="ChibiOST/HAL">
               </category>
            </categories>
            <configuration>
               <description>
                  HAL options and settings.
               </description>
               <image
                     align="left"
                     file="rsc/chibios48x48.png">
                  <text>
                     ChibiOST is GPL3-licensed free software.
                  </text>
               </image>
            </configuration>
            <requiredFeatures>
               <requiredFeature
                     id="org.chibios.spc5.features.hal.board.stm32f4xx">
               </requiredFeature>
               <requiredFeature
                     id="org.chibios.spc5.features.hal.osal">
               </requiredFeature>
            </requiredFeatures>
            <exportedFeatures>
               <exportedFeature
                     brief="ChibiOS/RT hardware abstraction layer (HAL) API interface."
                     exclusive="false"
                     id="org.chibios.spc5.features.hal">
               </exportedFeature>
               <exportedFeature
                     brief="ChibiOS/RT hardware abstraction layer (HAL) API interface."
                     exclusive="false"
                     id="org.chibios.spc5.features.hal.port.stm32f4xx">
               </exportedFeature>
               <exportedFeature
                     brief="ChibiOS/RT hardware abstraction layer (HAL) configuration interface."
                     exclusive="false"
                     id="org.chibios.spc5.features.hal.configuration">
               </exportedFeature>
               <exportedFeature
                     brief="The device uses GPIOv2 peripherals."
                     exclusive="true"
                     id="org.chibios.spc5.features.device.stm32f4xx.architecture.gpiov2">
               </exportedFeature>
               <exportedFeature
                     brief="The device uses SPIv1 peripherals."
                     exclusive="true"
                     id="org.chibios.spc5.features.device.stm32f4xx.architecture.spiv1">
               </exportedFeature>
               <exportedFeature
                     brief="The device uses USARTv1 peripherals."
                     exclusive="true"
                     id="org.chibios.spc5.features.device.stm32f4xx.architecture.usartv1">
               </exportedFeature>
            </exportedFeatures>
      </component>
   </extension>

</plugin>
